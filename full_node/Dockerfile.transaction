FROM python:3.11-slim

WORKDIR /app

COPY transaction/requirements.txt transaction/requirements.txt

# use --no-cache-dir in production
RUN echo "STARTING TRANSACTION SERVICE..." && \
    pip install -r transaction/requirements.txt

COPY transaction transaction
COPY config.json config.json
COPY contract/build contract/build
COPY common transaction/common

WORKDIR /app/transaction

ENTRYPOINT ["uvicorn", "main:app", "--port", "7001", \
    "--host", "0.0.0.0", \
    "--reload", \
    "--forwarded-allow-ips", "*"]

EXPOSE 7001
