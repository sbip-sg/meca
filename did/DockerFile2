FROM eclipse-temurin:11-jdk-alpine as build

WORKDIR /app

COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .
COPY src src

RUN ./mvnw install -DskipTests

FROM eclipse-temurin:11-jdk-alpine
COPY --from=build app/target/did-0.0.1-SNAPSHOT.jar /did2.jar
CMD ["java", "-Dspring.profiles.active=docker-testnet,verifier", "-jar", "/did2.jar"]
EXPOSE 8080

